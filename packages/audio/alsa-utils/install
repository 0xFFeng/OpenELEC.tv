. config/options $1

mkdir -p $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/amixer/amixer $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/aplay/aplay $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/speaker-test/speaker-test $INSTALL_SYSTEM/bin

mkdir -p $INSTALL_SYSTEM/lib/udev
  cp $PKG_DIR/scripts/soundconfig $INSTALL_SYSTEM/lib/udev

mkdir -p $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/alsactl/alsactl $INSTALL_SYSTEM/sbin

mkdir -p $INSTALL_SYSTEM/share/alsa/init
  cp $PKG_BUILD/alsactl/init/* $INSTALL_SYSTEM/share/alsa/init
  rm -rf $INSTALL_SYSTEM/share/alsa/init/Makefile*
