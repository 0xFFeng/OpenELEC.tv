. config/options $1

  mkdir -p $INSTALL_SYSTEM/lib
    cp -PR $PKG_BUILD/lib/libncurses.so* $INSTALL_SYSTEM/lib
    cp -PR $PKG_BUILD/lib/libtinfo.so* $INSTALL_SYSTEM/lib

  if [ "$DEVTOOLS" = yes ]; then
    cp -PR $PKG_BUILD/lib/libpanel.so* $INSTALL_SYSTEM/lib
    cp -PR $PKG_BUILD/lib/libform.so* $INSTALL_SYSTEM/lib
    cp -PR $PKG_BUILD/lib/libmenu.so* $INSTALL_SYSTEM/lib
  fi

  mkdir -p $INSTALL_SYSTEM/share/terminfo/l
    TERMINFO=$INSTALL_SYSTEM/share/terminfo $ROOT/$TOOLCHAIN/bin/tic -xe linux \
      $PKG_BUILD/misc/terminfo.src

  mkdir -p $INSTALL_SYSTEM/share/terminfo/v
    TERMINFO=$INSTALL_SYSTEM/share/terminfo $ROOT/$TOOLCHAIN/bin/tic -xe vt100 \
      $PKG_BUILD/misc/terminfo.src

  mkdir -p $INSTALL_SYSTEM/share/terminfo/x
    TERMINFO=$INSTALL_SYSTEM/share/terminfo $ROOT/$TOOLCHAIN/bin/tic -xe xterm \
      $PKG_BUILD/misc/terminfo.src
    TERMINFO=$INSTALL_SYSTEM/share/terminfo $ROOT/$TOOLCHAIN/bin/tic -xe xterm-color \
      $PKG_BUILD/misc/terminfo.src
    TERMINFO=$INSTALL_SYSTEM/share/terminfo $ROOT/$TOOLCHAIN/bin/tic -xe vt100 \
      $PKG_BUILD/misc/terminfo.src
