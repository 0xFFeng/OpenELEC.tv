. config/options

PKG_DIR=`find $PACKAGES -type d -name $1`

mkdir -p $INSTALL_SYSTEM/etc/bluetooth
#  cp $PKG_BUILD/src/main.conf $INSTALL_SYSTEM/etc/bluetooth
  cp $PKG_DIR/config/main.conf $INSTALL_SYSTEM/etc/bluetooth
  cp $PKG_BUILD/tools/rfcomm.conf $INSTALL_SYSTEM/etc/bluetooth
  cp $PKG_BUILD/input/input.conf $INSTALL_SYSTEM/etc/bluetooth

  if [ "$ALSA_SUPPORT" = yes ]; then
    cp $PKG_BUILD/audio/audio.conf $INSTALL_SYSTEM/etc/bluetooth
  fi

mkdir -p $INSTALL_SYSTEM/etc/dbus-1/system.d
  cp $PKG_BUILD/src/bluetooth.conf $INSTALL_SYSTEM/etc/dbus-1/system.d

mkdir -p $INSTALL_SYSTEM/lib/udev
# not needed:  cp $PKG_BUILD/scripts/bluetooth_serial $INSTALL_SYSTEM/lib/udev
# not needed:  chmod +x $INSTALL_SYSTEM/lib/udev/bluetooth_serial
  cp $PKG_BUILD/tools/hid2hci $INSTALL_SYSTEM/lib/udev

mkdir -p $INSTALL_SYSTEM/lib/udev/rules.d
  cp $PKG_BUILD/scripts/97-bluetooth.rules $INSTALL_SYSTEM/lib/udev/rules.d
# todo:        cp $PKG_BUILD/scripts/97-bluetooth-hid2hci.rules $INSTALL_SYSTEM/lib/udev/rules.d
# not needed:  cp $PKG_BUILD/scripts/97-bluetooth-serial.rules $INSTALL_SYSTEM/lib/udev/rules.d

mkdir -p $INSTALL_SYSTEM/lib
  cp -P $PKG_BUILD/lib/.libs/libbluetooth.so* $INSTALL_SYSTEM/lib

if [ "$ALSA_SUPPORT" = yes ]; then
  mkdir -p $INSTALL_SYSTEM/lib/alsa
    cp $PKG_BUILD/audio/.libs/*.so $INSTALL_SYSTEM/lib/alsa
fi

mkdir -p $INSTALL_SYSTEM/lib/bluetooth/plugins

mkdir -p $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/src/.libs/bluetoothd $INSTALL_SYSTEM/sbin

mkdir -p $INSTALL_SYSTEM/share/alsa
  cp $PKG_BUILD/audio/bluetooth.conf $INSTALL_SYSTEM/share/alsa

if [ "$DEVTOOLS" = "yes" ]; then
  mkdir -p $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/.libs/ciptool $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/dfutool $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/.libs/hcitool $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/.libs/l2ping $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/.libs/rfcomm $INSTALL_SYSTEM/bin
    cp $PKG_BUILD/tools/.libs/sdptool $INSTALL_SYSTEM/bin

mkdir -p $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/tools/.libs/bccmd $INSTALL_SYSTEM/sbin # TODO
  cp $PKG_BUILD/tools/.libs/hciattach $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/tools/.libs/hciconfig $INSTALL_SYSTEM/sbin
fi

