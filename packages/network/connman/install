. config/options $1

add_user system x 430 430 "service" "/var/run/connman" "/bin/sh"
add_group system 430

mkdir -p $INSTALL_SYSTEM/etc
  cp $PKG_DIR/config/services $INSTALL_SYSTEM/etc
  cp $PKG_DIR/config/resolv.conf $INSTALL_SYSTEM/etc

mkdir -p $INSTALL_SYSTEM/etc/connman
  cp $PKG_DIR/config/main.conf $INSTALL_SYSTEM/etc/connman

mkdir -p $INSTALL_SYSTEM/etc/dbus-1/system.d
  cp $PKG_BUILD/src/connman.conf $INSTALL_SYSTEM/etc/dbus-1/system.d

mkdir -p $INSTALL_SYSTEM/sbin
  cp -P $PKG_BUILD/src/connmand $INSTALL_SYSTEM/sbin

mkdir -p $INSTALL_SYSTEM/config
  cp $PKG_DIR/config/hosts.conf $INSTALL_SYSTEM/config

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL_SYSTEM/bin
    cp $PKG_DIR/scripts/cmcc $INSTALL_SYSTEM/bin
fi

