. config/options $1

mkdir -p $INSTALL_SYSTEM/lib
  cp -P $PKG_BUILD/libxtables/.libs/libxtables.so* $INSTALL_SYSTEM/lib/
  cp -P $PKG_BUILD/libiptc/.libs/libip4tc.so* $INSTALL_SYSTEM/lib/
  cp -P $PKG_BUILD/libiptc/.libs/libip6tc.so* $INSTALL_SYSTEM/lib/
  cp -P $PKG_BUILD/libiptc/.libs/libiptc.so* $INSTALL_SYSTEM/lib/
  rm -rf $INSTALL_SYSTEM/lib/libiptc.so*T

mkdir -p $INSTALL_SYSTEM/lib/xtables
  cp -P $PKG_BUILD/extensions/*.so $INSTALL_SYSTEM/lib/xtables

mkdir -p $INSTALL_SYSTEM/sbin
  cp -P $PKG_BUILD/iptables/.libs/xtables-multi $INSTALL_SYSTEM/sbin
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/ip6tables
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/ip6tables-restore
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/ip6tables-save
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/iptables
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/iptables-restore
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/sbin/iptables-save

mkdir -p $INSTALL_SYSTEM/bin
  ln -sf /usr/sbin/xtables-multi $INSTALL_SYSTEM/bin/iptables-xml
