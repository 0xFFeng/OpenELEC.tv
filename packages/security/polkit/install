. config/options $1

mkdir -p $INSTALL_SYSTEM/etc/dbus-1/system.d
  cp -P $PKG_BUILD/data/org.freedesktop.PolicyKit1.conf $INSTALL_SYSTEM/etc/dbus-1/system.d

mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority
  echo "chmod 700 $INSTALL_SYSTEM/etc/polkit-1/localauthority" >> $FAKEROOT_SCRIPT

mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority/10-vendor.d
mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority/20-org.d
mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority/30-site.d
mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority/50-local.d
mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority/90-mandatory.d

mkdir -p $INSTALL_SYSTEM/etc/polkit-1/localauthority.conf.d
  cp -P $PKG_BUILD/src/polkitbackend/50-localauthority.conf $INSTALL_SYSTEM/etc/polkit-1/localauthority.conf.d

mkdir -p $INSTALL_SYSTEM/etc/polkit-1/nullbackend.conf.d
  cp -P $PKG_BUILD/src/nullbackend/50-nullbackend.conf $INSTALL_SYSTEM/etc/polkit-1/nullbackend.conf.d

mkdir -p $INSTALL_SYSTEM/bin
  cp -P $PKG_BUILD/src/programs/.libs/pkaction $INSTALL_SYSTEM/bin
  cp -P $PKG_BUILD/src/programs/.libs/pkcheck $INSTALL_SYSTEM/bin
  cp -P $PKG_BUILD/src/programs/.libs/pkexec $INSTALL_SYSTEM/bin
    echo "chmod 4755 $INSTALL_SYSTEM/bin/pkexec" >> $FAKEROOT_SCRIPT

mkdir -p $INSTALL_SYSTEM/lib
  cp -P $PKG_BUILD/src/polkitagent/.libs/libpolkit-agent-1.so* $INSTALL_SYSTEM/lib
  rm -rf $INSTALL_SYSTEM/lib/libpolkit-agent-1.so*T
  cp -P $PKG_BUILD/src/polkitbackend/.libs/libpolkit-backend-1.so* $INSTALL_SYSTEM/lib
  rm -rf $INSTALL_SYSTEM/lib/libpolkit-backend-1.so*T
  cp -P $PKG_BUILD/src/polkit/.libs/libpolkit-gobject-1.so* $INSTALL_SYSTEM/lib

mkdir -p $INSTALL_SYSTEM/lib/polkit-1/extensions
  cp -P $PKG_BUILD/src/nullbackend/.libs/*.so $INSTALL_SYSTEM/lib/polkit-1/extensions

mkdir -p $INSTALL_SYSTEM/lib/polkit-1
  cp -P $PKG_BUILD/src/polkitagent/.libs/polkit-agent-helper-1 $INSTALL_SYSTEM/lib/polkit-1
    echo "chmod 4755 $INSTALL_SYSTEM/lib/polkit-1/polkit-agent-helper-1" >> $FAKEROOT_SCRIPT
  cp -P $PKG_BUILD/src/polkitd/.libs/polkitd $INSTALL_SYSTEM/lib/polkit-1

mkdir -p $INSTALL_SYSTEM/share/dbus-1/system-services
  cp -P $PKG_BUILD/data/org.freedesktop.PolicyKit1.service $INSTALL_SYSTEM/share/dbus-1/system-services

mkdir -p $INSTALL_SYSTEM/share/polkit-1/actions
  cp -P $PKG_BUILD/actions/org.freedesktop.policykit.policy $INSTALL_SYSTEM/share/polkit-1/actions
