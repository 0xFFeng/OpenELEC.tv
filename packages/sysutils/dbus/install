. config/options $1

add_user dbus x 81 81 "System message bus" "/" "/bin/sh"
add_group dbus 81
add_group netdev 497

mkdir -p $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/.build-target/tools/dbus-cleanup-sockets $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/.build-target/bus/dbus-daemon $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/.build-target/tools/.libs/dbus-monitor $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/.build-target/tools/.libs/dbus-uuidgen $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/.build-target/tools/.libs/dbus-send $INSTALL_SYSTEM/bin
#  cp $PKG_BUILD/.build-target/tools/dbus-launch $INSTALL_SYSTEM/bin

mkdir -p $INSTALL_SYSTEM/lib
  cp -P $PKG_BUILD/.build-target/dbus/.libs/libdbus-1.so* $INSTALL_SYSTEM/lib

mkdir -p $INSTALL_SYSTEM/lib/dbus
  cp $PKG_BUILD/.build-target/bus/dbus-daemon-launch-helper $INSTALL_SYSTEM/lib/dbus
    echo "chmod 4750 $INSTALL_SYSTEM/lib/dbus/dbus-daemon-launch-helper" >> $FAKEROOT_SCRIPT
    echo "chown 0:81 $INSTALL_SYSTEM/lib/dbus/dbus-daemon-launch-helper" >> $FAKEROOT_SCRIPT

mkdir -p $INSTALL_SYSTEM/etc/dbus-1
  cp $PKG_BUILD/.build-target/bus/session.conf $INSTALL_SYSTEM/etc/dbus-1
  cp $PKG_BUILD/.build-target/bus/system.conf $INSTALL_SYSTEM/etc/dbus-1

mkdir -p $INSTALL_SYSTEM/etc/dbus-1/system.d
mkdir -p $INSTALL_SYSTEM/etc/dbus-1/session.d
mkdir -p $INSTALL_SYSTEM/share/dbus-1/services
mkdir -p $INSTALL_SYSTEM/share/dbus-1/system-services
