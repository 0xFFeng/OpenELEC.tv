. config/options $1

mkdir -p $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/daemons/lircd $INSTALL_SYSTEM/sbin

mkdir -p $INSTALL_SYSTEM/etc/lirc
  cp $PKG_BUILD/remotes/mceusb/lircd.conf.mceusb $INSTALL_SYSTEM/etc/lirc/lircd.conf
  cp $PKG_BUILD/remotes/devinput/lircd.conf.devinput $INSTALL_SYSTEM/etc/lirc

mkdir -p $INSTALL_SYSTEM/sbin
  cp $PKG_BUILD/daemons/lircmd $INSTALL_SYSTEM/sbin # do we need this?

mkdir -p $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/tools/ircat $INSTALL_SYSTEM/bin # do we need this?
  cp $PKG_BUILD/tools/irexec $INSTALL_SYSTEM/bin # do we need this?
  cp $PKG_BUILD/tools/irpty $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/tools/irsend $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/tools/irw $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/tools/lircrcd $INSTALL_SYSTEM/bin # do we need this?
  cp $PKG_BUILD/tools/mode2 $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/daemons/irrecord $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/tools/irsend $INSTALL_SYSTEM/bin # do we need this?
