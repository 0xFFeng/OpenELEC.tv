. config/options $1

mkdir -p $INSTALL_ROOT/lib
  cp $PKG_BUILD/objdir-$1/elf/ld*.so.* $INSTALL_ROOT/lib
  cp $PKG_BUILD/objdir-$1/libc.so.6 $INSTALL_ROOT/lib
  cp $PKG_BUILD/objdir-$1/math/libm.so.6 $INSTALL_ROOT/lib
  cp $PKG_BUILD/objdir-$1/nptl/libpthread.so.0 $INSTALL_ROOT/lib
  cp $PKG_BUILD/objdir-$1/rt/librt.so.1 $INSTALL_ROOT/lib

mkdir -p $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/crypt/libcrypt.so.1 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/dlfcn/libdl.so.2 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/nis/libnsl.so.1 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/nis/libnss_compat.so.2 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/nss/libnss_files.so.2 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/resolv/libnss_dns.so.2 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/resolv/libresolv.so.2 $INSTALL_SYSTEM/lib
  cp $PKG_BUILD/objdir-$1/login/libutil.so.1 $INSTALL_SYSTEM/lib # e.g. for utmp support, needed by PAM_filter


  [ "$DEVTOOLS" = yes ] && cp $PKG_BUILD/objdir-$1/nptl_db/libthread_db.so.1 $INSTALL_ROOT/lib # for GDB

if [ "$TARGET_ARCH" = "x86_64" -o "$TARGET_ARCH" = "powerpc64" ]; then
  rm -rf $INSTALL_ROOT/lib64
  ln -sf /lib $INSTALL_ROOT/lib64
  rm -rf $INSTALL_SYSTEM/lib64
  ln -sf /usr/lib $INSTALL_SYSTEM/lib64
fi

mkdir -p $INSTALL_SYSTEM/bin
  cp $PKG_BUILD/objdir-$1/elf/ldd $INSTALL_SYSTEM/bin
  sed -i 's%bash%sh%g' $INSTALL_SYSTEM/bin/ldd

  cp $PKG_BUILD/objdir-$1/locale/locale $INSTALL_SYSTEM/bin

# libiconv replacement:
  mkdir -p $INSTALL_SYSTEM/lib/gconv
    cp $PKG_BUILD/iconvdata/gconv-modules $INSTALL_SYSTEM/lib/gconv
    cp $PKG_BUILD/objdir-$1/iconvdata/*.so $INSTALL_SYSTEM/lib/gconv

mkdir -p $INSTALL_SYSTEM/etc
  cp $PKG_DIR/config/nsswitch.conf $INSTALL_SYSTEM/etc
  cp $PKG_BUILD/sunrpc/etc.rpc $INSTALL_SYSTEM/etc/rpc
