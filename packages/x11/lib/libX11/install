. config/options $1

mkdir -p $INSTALL_SYSTEM/lib
  cp -P $PKG_BUILD/src/.libs/libX11*.so* $INSTALL_SYSTEM/lib
  rm -rf $INSTALL_SYSTEM/lib/libX11*.so*T

mkdir -p $INSTALL_SYSTEM/lib/X11
  cp -P $PKG_BUILD/src/xcms/Xcms.txt $INSTALL_SYSTEM/lib/X11

mkdir -p $INSTALL_SYSTEM/lib/X11/locale/common
  cp -P $PKG_BUILD/modules/im/ximcp/.libs/ximcp.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/ximcp.so*T
  cp -P $PKG_BUILD/modules/lc/Utf8/.libs/xlcUTF8Load.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/xlcUTF8Load.so*T
  cp -P $PKG_BUILD/modules/lc/def/.libs/xlcDef.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/xlcDef.so*T
  cp -P $PKG_BUILD/modules/lc/gen/.libs/xlibi18n.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/xlibi18n.so*T
  cp -P $PKG_BUILD/modules/lc/xlocale/.libs/xlocale.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/xlocale.so*T
  cp -P $PKG_BUILD/modules/om/generic/.libs/xomGeneric.so* $INSTALL_SYSTEM/lib/X11/locale/common
  rm -rf $INSTALL_SYSTEM/lib/X11/locale/common/xomGeneric.so*T

mkdir -p $INSTALL_SYSTEM/share/X11/locale
  cp $PKG_BUILD/src/XErrorDB $INSTALL_SYSTEM/share/X11/

mkdir -p $INSTALL_SYSTEM/share/X11/locale
  cp $PKG_BUILD/nls/compose.dir $INSTALL_SYSTEM/share/X11/locale
  cp $PKG_BUILD/nls/locale.alias $INSTALL_SYSTEM/share/X11/locale
  cp $PKG_BUILD/nls/locale.dir $INSTALL_SYSTEM/share/X11/locale

  for i in `find $PKG_BUILD/nls/* -type d`; do
    LOCALE=`basename $i`
    mkdir -p $INSTALL_SYSTEM/share/X11/locale/$LOCALE
      cp $PKG_BUILD/nls/$LOCALE/Compose $INSTALL_SYSTEM/share/X11/locale/$LOCALE
      cp $PKG_BUILD/nls/$LOCALE/XI18N_OBJS $INSTALL_SYSTEM/share/X11/locale/$LOCALE
      cp $PKG_BUILD/nls/$LOCALE/XLC_LOCALE $INSTALL_SYSTEM/share/X11/locale/$LOCALE
  done
